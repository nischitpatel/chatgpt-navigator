{
  "manifest_version": 3,
  "name": "ChatGPT Navigator",
  "version": "1.0",
  "description": "Sidebar for capturing and navigating ChatGPT questions.",
  "permissions": ["storage"],
  "host_permissions": ["https://chatgpt.com/*", "https://*.openai.com/*"],
  "content_scripts": [
    {
      "matches": ["https://chatgpt.com/*", "https://*.openai.com/*"],
      "js": ["content_script.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["sidebar/sidebar.html", "sidebar/sidebar.js", "sidebar/sidebar.css"],
      "matches": ["<all_urls>"]
    }
  ]
}
